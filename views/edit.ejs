<%- include('./partials/header.ejs') %>
<h1>Edit: <%= book.title %></h1>

<form action='/books/<%= book.id %>?_method=PUT' method='POST'>
    <label>Title:</label> <input type='text' id='title' name='title' value='<%= book.title %>' /><br />
    <label>Author:</label> <input type='text' id='author' name='author' value='<%= book.author %>' /><br />
    <label>Series:</label> <input type='text' id='series' name='series' value='<%= book.series %>' /><br />
    <label>Cover:</label> <input type='text' id='cover' name='cover' value='<%= book.cover %>' /><br />
    <label>Genre:</label> <input type='text' id='genre' name='genre' value='<%= book.genre %>' /><br />
    <label>Tags:</label> <input type='text' id='tags' name='tags' /><br value='<%= book.tags %>' />
    <label>Rating:</label> <input type='text' id='rating' name='rating' value='<%= book.rating %>' /><br />
    <label>Notes:</label> <input type='datafield' id='notes' name='notes' value='<%= book.notes %>' /><br />
    <label>Read?:</label> <input 
    type='checkbox' id='read' name='read' 
    <% if (book.read) { %>
        checked
    <% } %> /><br />
    <label>Date Read:</label> <input type='text' id='dateread' name='dateread' value='<%= book.dateread %>' /><br /><br />
    <input type='submit' value='Edit'>
</form>

<%- include('./partials/footer.ejs') %>