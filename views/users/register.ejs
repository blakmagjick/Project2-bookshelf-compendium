<%- include('../partials/header.ejs') %>
<% if (message.length > 0) { %>
    <div class='alert'>
        <%= message %>
    </div>
<% } %>
<h1>Register a New User</h1><br />
<form action='/users/register' method='POST'>
    <fieldset>
        <label id='value' for='username'>Username:</label>
        <input type='text' name='username' id='username'>
    </fieldset>
    <fieldset>
        <label id='value' for='password'>Password:</label>
        <input type='password' name='password' id='password'>
    </fieldset><br />
    <input id='button' class='btn btn-dark' type='submit' value='Sign Up'>
</form>
<%- include('../partials/footer.ejs') %>